<section class="impact-section bg-brand section-overlap py-5 <%= fadeClass || '' %>">
  <div class="container">

    <!-- Section Header -->
    <div class="text-center mb-5">
      <h2 class="section-title">Our Impact So Far</h2>
      <p class="text-muted mt-2">
        SISDI has reached thousands of children and strengthened communities across Africa.
      </p>
    </div>

    <!-- Stats -->
    <div class="row text-center g-4 mb-5">
      <div class="col-md-3">
        <div class="stat-card p-4 rounded shadow-sm">
          <h2 class="stat-number text-gold">5,000+</h2>
          <p>Children Reached</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-card p-4 rounded shadow-sm">
          <h2 class="stat-number text-gold">50+</h2>
          <p>Partner Schools</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-card p-4 rounded shadow-sm">
          <h2 class="stat-number text-gold">10+</h2>
          <p>Communities Served</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-card p-4 rounded shadow-sm">
          <h2 class="stat-number text-gold">3</h2>
          <p>Countries</p>
        </div>
      </div>
    </div>

    <!-- Image Mosaic -->
    <div class="row g-3">
      <div class="col-md-4">
        <div class="impact-img-wrapper">
          <img src="/images/impact-1.jpeg" class="img-fluid rounded shadow-sm impact-img" alt="Children training football">
        </div>
      </div>
      <div class="col-md-4">
        <div class="impact-img-wrapper">
          <img src="/images/impact-2.jpeg" class="img-fluid rounded shadow-sm impact-img" alt="Classroom learning">
        </div>
      </div>
      <div class="col-md-4">
        <div class="impact-img-wrapper">
          <img src="/images/impact-3.jpeg" class="img-fluid rounded shadow-sm impact-img" alt="Community football event">
        </div>
      </div>
    </div>

  </div>
</section>
