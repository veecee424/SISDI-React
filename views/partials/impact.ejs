<section class="impact-section bg-brand section-overlap py-5 <%= fadeClass || '' %>">
  <div class="container">

    <!-- Section Header -->
    <div class="text-center mb-5">
      <h2 class="section-title statement-text">Our <span>Impact</span> So Far</h2>
      <p class="text-muted mt-2">
        SISDI has reached thousands of children and strengthened communities across Africa.
      </p>
    </div>

    <!-- Stats -->
    <div class="row text-center g-4 mb-5">
      <div class="col-md-3">
        <div class="impact-stat stat-card p-4 rounded shadow-sm">
          <h2 class="counter stat-number" data-target="5000">0</h2>
          <p>Children Reached</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="impact-stat stat-card p-4 rounded shadow-sm">
          <h2 class="counter stat-number" data-target="50">0</h2>
          <p>Partner Schools</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="impact-stat stat-card p-4 rounded shadow-sm">
          <h2 class="counter stat-number" data-target="10">0</h2>
          <p>Communities Served</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="impact-stat stat-card p-4 rounded shadow-sm">
          <h2 class="counter stat-number" data-target="3">0</h2>
          <p>Countries</p>
        </div>
      </div>
    </div>

  </div>
</section>
