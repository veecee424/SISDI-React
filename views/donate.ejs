<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head', { title: 'Donate' }) %>
  <body>
    <%- include('partials/navbar') %>

    <main>

      <!-- PAGE HEADER -->
      <section class="donate-header dark-section fade-in">
        <div class="container text-center">
          <h1 class="page-title text-white">Support SISDI</h1>
          <div class="section-divider"></div>
          <p class="page-lead">
            Your donation helps provide children with access to football, education,
            and life-changing opportunities.
          </p>
        </div>
      </section>


      <!-- DONATION OPTIONS -->
      <section class="donate-options fade-in">
        <div class="container py-5">
          <div class="row g-4 align-items-stretch">

            <!-- BANK TRANSFER (LIGHT) -->
            <div class="col-md-6">
              <div class="donation-card h-100">
                <div class="donation-card-body">
                  <h4>Bank Transfer</h4>
                  <p class="text-muted">
                    Make a direct bank transfer using the details below.
                  </p>

                  <div class="bank-details">
                    <p><strong>Account Name:</strong> Schools In Soccer Development Initiative</p>
                    <p><strong>Bank Name:</strong> Your Bank Name</p>
                    <p><strong>Account Number:</strong> 0000000000</p>
                    <p><strong>Currency:</strong> NGN / USD</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- ONLINE DONATION (DARK FEATURED) -->
            <div class="col-md-6">
              <div class="donation-card dark featured h-100">
                <div class="donation-card-body">
                  <h4>Donate Online</h4>

                  <p class="text-light-muted">
                    Secure, fast, and trusted online payments via Flutterwave.
                  </p>

                  <p>
                    Online donations allow us to respond quickly and scale our
                    impact across schools and communities.
                  </p>

                  <a
                    href="https://flutterwave.com/pay/your-link"
                    target="_blank"
                    class="btn btn-donate mt-auto"
                  >
                    Donate Now
                  </a>
                </div>
              </div>
            </div>

          </div>
        </div>
      </section>


    </main>

    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/scroll-animations.js"></script>
  </body>
</html>
