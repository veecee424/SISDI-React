<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head', { title: 'Contact' }) %>
  <body>
    <%- include('partials/navbar') %>

    <%- include('partials/page-hero', {
      title: 'Contact SISDI',
      subtitle: 'We‚Äôd love to hear from you. Reach out and let‚Äôs make an impact together.',
      variant: 'contact',
      fadeClass: 'fade-in'
    }) %>

    <main>

            <!-- INVOLVEMENT OPTIONS -->
      <section class="contact-options section fade-in">
        <div class="container py-5">
          <div class="row g-4 text-center">

            <div class="col-md-4">
              <div class="involve-card card simple">
                <div class="icon-circle">‚úâÔ∏è</div>
                <h5>General Enquiry</h5>
                <p>Questions about SISDI or our programs.</p>
              </div>
            </div>

            <div class="col-md-4">
              <div class="involve-card card simple">
              <div class="icon-circle">ü§ù</div>
              <h5>Partnership Enquiry</h5>
              <p>Organisations interested in collaborating.</p>
              </div>
            </div>

            <div class="col-md-4">
              <div class="involve-card card simple">
              <div class="icon-circle">‚öΩ</div>
              <h5>Sponsorship Enquiry</h5>
              <p>Brands and supporters exploring sponsorship opportunities.</p>
              </div>
            </div>

          </div>
        </div>
      </section>

      <!-- CONTACT CONTENT -->
      <section class="section bg-soft">
        
        <div class="container">
          <div class="row g-5 align-items-start">

            <!-- CONTACT INFO & IMAGE -->
            <div class="col-lg-6">

              <h2 class="section-title statement-text"><span>Get in Touch</span></h2>
              <p class="text-muted mb-4">
                Whether you have a question, want to partner with us, or are ready to volunteer, send us a message and we‚Äôll get back to you!
              </p>

              <div class="contact-details mb-4">

                <p>
                  <i class="bi bi-envelope-fill me-2 contact-icon"></i>
                  <strong>Email:</strong>
                  <a class="ntd" href="mailto:hello@sisdi.org">schoolsinsoccer@gmail.com</a>
                </p>

                <p>
                  <i class="bi bi-telephone-fill me-2 contact-icon"></i>
                  <strong>Phone:</strong>
                  <a class="ntd" href="tel:+2349122328676">+2349122328676</a>
                </p>

                <p>
                  <i class="bi bi-whatsapp me-2 contact-icon"></i>
                  <strong>Whatsapp:</strong>
                  <a
                    class="ntd"
                    href="https://wa.me/2348054619954"
                    target="_blank"
                    aria-label="Chat with us on WhatsApp"
                  >Chat with us on WhatsApp</a>
                </p>

              </div>

            </div>

            <!-- CONTACT FORM -->
            <div class="col-lg-6">
              <h2 class="section-title statement-text"><span>Send Us a Message</span></h2>
              <% if (errors) { %>
                <div class="alert alert-danger">
                  <% errors.forEach(error => { %>
                    <p><%= error.msg %></p>
                  <% }) %>
                </div>
              <% } %>

              <% if (success) { %>
                <div class="alert alert-success">
                  <%= success %>
                </div>
              <% } %>

              <form class="contact-form" method="POST" action="/contact">
                <div class="row g-3">

                  <div class="col-md-6">
                    <input
                      type="text"
                      class="form-control"
                      placeholder="Full Name"
                      name="name"
                      required
                    />
                  </div>

                  <div class="col-md-6">
                    <input
                      type="email"
                      class="form-control"
                      placeholder="Email Address"
                      name="email"
                      required
                    />
                  </div>

                  <div class="col-md-12">
                    <input
                      type="text"
                      class="form-control"
                      placeholder="Subject"
                      name="subject"
                      required
                    />
                  </div>

                  <div class="col-md-12">
                    <textarea
                      class="form-control"
                      name="message"
                      rows="5"
                      placeholder="Your message..."
                      required
                    ></textarea>
                  </div>
                </div>

                <div class="text-center mt-4">
                  <button type="submit" class="btn btn-donate btn-lg">
                    Send Message
                  </button>
                </div>
              </form>

            </div>
          </div>
          <div class="contact-socials mt-4">
            <h5 class="mb-3">Connect with us</h5>

            <div class="social-icons">
              <a href="https://web.facebook.com/profile.php?id=61563594750242" aria-label="Facebook" target="_blank">
                <i class="bi bi-facebook"></i>
              </a>
              <a href="https://x.com/schoolsinsoccer?s=20" aria-label="Twitter" target="_blank">
                <i class="bi bi-twitter-x"></i>
              </a>
              <a href="https://www.instagram.com/schoolsinsoccer_?utm_source=ig_web_button_share_sheet&igsh=ZDNlZDc0MzIxNw==" aria-label="Instagram" target="_blank">
                <i class="bi bi-instagram"></i>
              </a>
              <a href="https://www.linkedin.com/company/schools-in-soccer-development-initiative" aria-label="LinkedIn" target="_blank">
                <i class="bi bi-linkedin"></i>
              </a>
            </div>
          </div>
